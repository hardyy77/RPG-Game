<Window x:Class="RPG_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPG_Game"
        mc:Ignorable="d"
        Title="RPG Game" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Width="157" >
            <Button Name="Player" Content="Player" Click="PlayerViewClick" Margin="10" Width="35"></Button>
            <Button Name="Location" Content="Location" Click="LocationViewClick"></Button>
        </StackPanel>
        <Grid x:Name="PlayerView" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="16*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>
            <Label Name="PlayerNameLabel" Content="default" HorizontalAlignment="Left" Grid.RowSpan="2" />
            <Label Name="PlayerMaxHealthLabel" Content="default" HorizontalAlignment="Left" Grid.RowSpan="2"/>
            <Label Name="PlayerHealthLabel" Content="default" HorizontalAlignment="Left" Grid.RowSpan="2"  />
            <Label Name="PlayerStrengthLabel" Content="default" HorizontalAlignment="Left" Grid.RowSpan="2" />
            <Label Name="PlayerStaminaLabel" Content="default" HorizontalAlignment="Left" Grid.RowSpan="2" />
            <Label Name="PlayerGoldLabel" Content="default" HorizontalAlignment="Left" Grid.RowSpan="2" />
            <Label Name="PlayerBankLabel" Content="default" HorizontalAlignment="Left" Grid.RowSpan="2" />
            <Label Name="PlayerLevelLabel" Content="default" HorizontalAlignment="Left" Grid.RowSpan="2" />
            <Label Name="PlayerExpLabel" Content="Exp" HorizontalAlignment="Left" Margin="4,73,0,-73" Grid.RowSpan="2" />
            <StackPanel HorizontalAlignment="Right" Width="157" Grid.RowSpan="2">

            </StackPanel>

        </Grid>
        <Grid x:Name="LocationView" Visibility="Collapsed">
            <Label Content="Location" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Label Content="Label" HorizontalAlignment="Left" Margin="214,154,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
